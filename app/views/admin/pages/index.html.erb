<h1>Pages</h1>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Slug</th>
        <th>Updated at</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @pages.each do |page| %>
        <tr>
          <td><%= page.title %></td>
          <td><%= page.slug %></td>
          <td><%= page.updated_at %></td>
          <td class="text-right" nowrap>
            <%= link_to edit_admin_page_path(page), class: "btn btn-primary btn-xs" do %>
              <%= content_tag(:span, nil, class: "glyphicon glyphicon-pencil") %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

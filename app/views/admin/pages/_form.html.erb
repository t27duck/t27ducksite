<%= form_for [:admin, page] do |f| %>
  <% if page.errors.any? %>
    <div class="alert alert-danger">
      <p><strong><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</strong></p>
      <ul>
      <% page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control', rows: 15, required: true %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to "Cancel", admin_pages_path, class: 'btn btn-warning' %>
    <a href="#" id="preview-link" class="btn btn-info">Preview</a>
  </div>
<% end %>

<div id="preview-content"></div>

<% content_for :bottom do %>
<script type="text/javascript">
  $(document).ready(function() {
    $("#preview-link").on("click", function(event) {
      var $preview  = $("#preview-content");
      var content   = $("#page_content").val();
      $.post(
        "<%= preview_admin_pages_path %>",
        { content: content }
      ).done(function(html) {
        $preview.html(html);
      });
      event.preventDefault();
    });
  });
</script>
<% end %>

<%= form_for [:admin, page] do |f| %>
  <% if page.errors.any? %>
    <aside>
      <p><strong><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</strong></p>
      <ul>
      <% page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </aside>
  <% end %>

  <%= f.label :title, 'Title', class: 'form-label' %>
  <%= f.text_field :title, class: 'form-control', required: true %>

  <%= f.label :content, 'Content', class: 'form-label' %>
  <%= f.text_area :content, class: 'form-control', rows: 15, required: true %>

  <%= f.submit class: 'button' %>
  <%= link_to "Cancel", admin_pages_path, class: 'btn btn-warning' %>
  <a href="#" id="preview-link" class="btn btn-info">Preview</a>
<% end %>

<div id="preview-content"></div>

<% content_for :bottom do %>
<script type="text/javascript">
  $(document).ready(function() {
    $("#preview-link").on("click", function(event) {
      var $preview  = $("#preview-content");
      var content   = $("#page_content").val();
      $.ajax({
        type: 'POST',
        beforeSend: function(xhr) {xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'))},
        url: "<%= preview_admin_pages_path %>",
        data: { content: content }
      }).done(function(html) {
        $preview.html(html);
      });
      event.preventDefault();
    });
  });
</script>
<% end %>

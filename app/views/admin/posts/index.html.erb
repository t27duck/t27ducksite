<div class="clearfix mb-3">
  <%= link_to new_admin_post_path, class: "float-end btn btn-primary" do %>
    <%= content_tag(:span, nil, class: "glyphicon glyphicon-plus") %>
    Add
  <% end %>
</div>

<h1>Unpublished Posts</h1>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Tags</th>
        <th>Created at</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @unpublished_posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.tags.map(&:name).join(', ') %></td>
          <td><%= post.created_at %></td>
          <td class="text-end" nowrap>
            <%= link_to "Edit", edit_admin_post_path(post), class: "btn btn-primary btn-xs" %>
            <%= link_to "Delete", admin_post_path(post), method: :delete, class: "btn btn-danger btn-xs", data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<h1>Published Posts</h1>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Tags</th>
        <th>Published at</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @published_posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.tags.map(&:name).join(', ') %></td>
          <td><%= post.published_at %></td>
          <td class="text-end" nowrap>
            <%= link_to "Edit", edit_admin_post_path(post), class: "btn btn-primary btn-xs" %>
            <%= link_to "Delete", admin_post_path(post), method: :delete, class: "btn btn-danger btn-xs", data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

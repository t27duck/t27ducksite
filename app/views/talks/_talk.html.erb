<article class="talk">
  <h2><%= link_to talk.title.html_safe, talk.url, target: "_blank" %></h2>
  <h5>
    Presented: <%= talk.presented_on ? talk.presented_on.strftime("%B %d, %Y") : "n/a" %> |
    <%= talk.event_name %>
  </h5>

  <% if talk.description.present? %>
    <div class="description">
      <%= talk.description.html_safe %>
    </div>
  <% end %>
</article>

{
  "extends": "airbnb",

  "env": {
    "browser": true,
    "es6": true
  },

  "plugins": [
    "react"
  ],

  "parser": "babel-eslint",

  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "rules": {
    "comma-dangle": 0,
    "sourceType": "module",
    "no-unused-vars": ["error", { "vars": "local" }],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  },

  "settings": {
    "import/resolver": {
      "webpack": {
        "config": {
          "resolve": {
            "modules": ["frontend", "node_modules"]
          }
        }
      }
    }
  }
}
